            <artifactId>iceberg-spark-runtime-${iceberg.spark.version}_${scala.compact.version}</artifactId>
            <version>${iceberg.runtime.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.iceberg</groupId>
            <artifactId>iceberg-hive-runtime</artifactId>
