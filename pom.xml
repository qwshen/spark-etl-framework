            <artifactId>spark-sql-kafka-0-10_${scala.compact.version}</artifactId>
            <version>${spark.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.delta</groupId>
            <artifactId>delta-core_${scala.compact.version}</artifactId>
            <version>${delta.lake.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-avro_${scala.compact.version}</artifactId>
            <version>${spark.avro.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
